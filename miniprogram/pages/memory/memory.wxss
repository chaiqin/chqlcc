/* pages/memory/memory.wxss */

page {
  background: #f0f0f0;
}

.lunbo {
  height: 420rpx;
  width: 100%;
}

.lunbo image {
  width: 100%;
  height: 100%;
}

.tianjia {
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  bottom: 30rpx;
  right: 20rpx;
}

.memoty {
  box-sizing: border-box;
  background-color: white;
  width: 100%;
  padding: 36rpx;
  margin-top: 25rpx;
  display: flex;
  flex-direction: row;
}

.userinfo-avatar {
  width: 80rpx;
  height: 80rpx;
  margin: 0rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
  margin-right: 20rpx;
}

.name {
  font-size: 30rpx;
  font-weight: bold;
}

.time {
  font-size: 25rpx;
  color: #969aa1;
  margin-bottom: 15rpx;
}

.content {
  font-size: 33rpx;
}

.gallery {
  margin: 0 auto;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

/*每张图片所占容器*/

.item {
  position: relative;
  margin: 10rpx 10rpx 0 0;
  width: 182rpx;
  height: 182rpx;
}

.item-one {
  position: relative;
  margin: 10rpx 10rpx 0 0;
  width: 350rpx;
  height: 350rpx;
}

.item image {
  width: 100%;
  height: 100%;
}

.item-one image {
  width: 100%;
  height: 100%;
}
